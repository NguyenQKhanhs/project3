@model IEnumerable<Project3.Models.Instructor>
@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4"></h5>
            <div class="card">
                <div class="card-body margin-1-3rem custom-bg">
                    <div class="container mt-4 px-2">
                        <div class="mb-3 d-flex justify-content-between align-items-center">
                            @using (Html.BeginForm("InstructorSearch", "Admin", FormMethod.Get))
                            {
                                <div class="d-flex">
                                    <input type="text" name="searchTerm" class="form-control search" placeholder="Search" required />
                                    <button type="submit" class="btn btn-primary btn-search ms-2">Search</button>
                                </div>
                            }
                            <div>
                                <a asp-controller="Admin" asp-action="InstructorAdd" class="btn btn-outline-secondary btn-add m-1">Add</a>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless">
                                <thead>
                                    <tr class="bg-light">
                                        
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Bio</th>
                                       
										<th>Phone Number</th>
										<th>Email</th>
                                        <th>Image</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                
                                                <td>@item.Name</td>
                                                <td>@item.Gender</td>
                                                <td>@item.Bio</td>
												
												<td>@item.PhoneNumber</td>
												<td>@item.Email</td>
                                                <td><img src="@item.ImageLink" alt="" style="height: 50px;"></td>
                                                <td class="d-flex align-items-center justify-content-between td-action">
                                                    @await Html.PartialAsync("_PopupConfirm")
                                                    <form method="post" asp-action="admin_instructor_delete" asp-route-id="@item.InstructorId" onsubmit="return showConfirmPopup(this);">
                                                        <button type="submit" class="btn btn-outline-danger m-1">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                                            </svg>
                                                        </button>
                                                    </form>
                                                    <a asp-area="" asp-controller="Admin" asp-action="admin_instructor_edit" asp-route-id="@item.InstructorId" class="btn btn-outline-success m-1">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-brush" viewBox="0 0 16 16">
                                                            <path d="M15.825.12a.5.5 0 0 1 .132.584c-1.53 3.43-4.743 8.17-7.095 10.64a6.1 6.1 0 0 1-2.373 1.534c-.018.227-.06.538-.16.868-.201.659-.667 1.479-1.708 1.74a8.1 8.1 0 0 1-3.078.132 4 4 0 0 1-.562-.135 1.4 1.4 0 0 1-.466-.247.7.7 0 0 1-.204-.288.62.62 0 0 1 .004-.443c.095-.245.316-.38.461-.452.394-.197.625-.453.867-.826.095-.144.184-.297.287-.472l.117-.198c.151-.255.326-.54.546-.848.528-.739 1.201-.925 1.746-.896q.19.012.348.048c.062-.172.142-.38.238-.608.261-.619.658-1.419 1.187-2.069 2.176-2.67 6.18-6.206 9.117-8.104a.5.5 0 0 1 .596.04M4.705 11.912a1.2 1.2 0 0 0-.419-.1c-.246-.013-.573.05-.879.479-.197.275-.355.532-.5.777l-.105.177c-.106.181-.213.362-.32.528a3.4 3.4 0 0 1-.76.861c.69.112 1.736.111 2.657-.12.559-.139.843-.569.993-1.06a3 3 0 0 0 .126-.75zm1.44.026c.12-.04.277-.1.458-.183a5.1 5.1 0 0 0 1.535-1.1c1.9-1.996 4.412-5.57 6.052-8.631-2.59 1.927-5.566 4.66-7.302 6.792-.442.543-.795 1.243-1.042 1.826-.121.288-.214.54-.275.72v.001l.575.575zm-4.973 3.04.007-.005zm3.582-3.043.002.001h-.002z" />
                                                        </svg>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">Không có giảng viên nào được tìm thấy.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
