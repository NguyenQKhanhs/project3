@model IEnumerable<Project3.Models.CustomerInformation>
@using Project3.Extensions
@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}


<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4"></h5>
            <div class="card">
                <div class="card-body margin-1-3rem custom-bg">
                    <div class="">
                        <div class="mt-5 d-flex justify-content-between align-items-center">
                            <div class="d-flex">
                                
                            </div>
                            <div>
                                
                            </div>
                        </div>
                        <div class="">
                            <table class="table table-responsive table-borderless">
                                <thead>
                                    <tr class="bg-light">
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone Number</th>
                                        
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.CustomerInformationId</td>
                                                <td>@item.FullName</td>
                                                <td>@item.Email</td>
                                                <td>@item.PhoneNumber</td>
                                                
                                                <td class="">
                                                    <!-- Xóa -->
                                                    <form method="post" asp-action="admin_class_student_delete" asp-route-id="@item.CustomerInformationId" asp-route-classesId="@item.ClassesId" onsubmit="return confirm('Are you sure you want to remove the class ID for this customer?');">
                                                        <button type="submit" class="btn btn-outline-danger m-1">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                                            </svg>
                                                        </button>
                                                    </form>



                                                   
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="9" class="text-center">No customer information available.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="text-end">
                                
                                <a asp-action="admin_class" class="btn btn-outline-secondary m-1">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
