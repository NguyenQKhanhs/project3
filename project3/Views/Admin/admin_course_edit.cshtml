@model Project3.Models.Course
@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4"></h5>
            <div class="card">
                <div class="card-body custom-bg" style="margin: 0.75rem!important">
                    <h1 class="text-center">Edit Course</h1>
                    <div class="container mt-5 px-2" style="padding: 0 15%!important">
                        <div class="mb-2 d-flex justify-content-between align-items-center"></div>
                        <div class="table-responsive">
                            <form asp-action="admin_course_edit" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="CourseId" value="@Model.CourseId" /> <!-- Giữ lại CourseId để cập nhật -->
                                <!-- Tên khóa học -->
                                <div class="col-md-12">
                                    <label class="labels">Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter Course Name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <!-- Mô tả khóa học -->
                                <div class="col-md-12">
                                    <label class="labels">Description</label>
                                    <textarea asp-for="Description" class="form-control" placeholder="Enter Course Description" rows="8" required></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label class="labels">Course Content</label>
                                    <textarea asp-for="Content" class="form-control" placeholder="Enter Course Content (one topic per line)" rows="8" required></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                                <!-- Giá khóa học -->
                                <div class="col-md-12">
                                    <label class="labels">Price</label>
                                    <input asp-for="Price" class="form-control" step="0.01" placeholder="Enter Course Price" required>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <!-- Ngày bắt đầu -->
                                <div class="col-md-12">
                                    <label class="labels">Start Date</label>
                                    <input asp-for="StartDate" type="date" class="form-control" required>
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label class="labels">Exam Date</label>
                                    <input asp-for="ExamDate" type="date" class="form-control" required>
                                    <span asp-validation-for="ExamDate" class="text-danger"></span>
                                </div>
                                <!-- Trình độ học vấn -->
                                <div class="col-md-12">
                                    <label class="labels">Study Level</label>
                                    <select asp-for="StudyLevel" class="form-control" required>
                                        <option value="">Select Level</option>
                                        <option value="Beginner">Beginner</option>
                                        <option value="Intermediate">Intermediate</option>
                                        <option value="Advanced">Advanced</option>
                                    </select>
                                    <span asp-validation-for="StudyLevel" class="text-danger"></span>
                                </div>
                                <!-- Thời gian khóa học -->
                                <div class="col-md-12">
                                    <label class="labels">Duration (in weeks)</label>
                                    <input asp-for="Duration" type="number" class="form-control" placeholder="Enter Duration in Weeks" min="1" required>
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                                <!-- Ảnh khóa học -->
                                <div class="col-md-12">
                                    <label for="image">Ảnh Khóa Học:</label>
                                    <input type="file" name="image" class="form-control" />
                                    <p class="mt-2">Current Image: <img src="ImageUrl" alt="Current Image" style="height: 100px;"></p>
                                </div>
                                <!-- Danh mục khóa học -->
                                <div class="col-md-12">
                                    <label class="labels">Category</label>
                                    <select asp-for="CategoryId" class="form-control" required>
                                        <option value="">Select Category</option>
                                        <option value="1" >Frontend</option>
                                        <option value="2" >Backend</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                                <!-- Nút cập nhật -->
                                <div class="mt-3">
                                    <div class="text-end">
                                        <button type="submit" class="btn btn-primary">Update Course</button>
                                        <a asp-area="" asp-controller="Admin" asp-action="admin_course" class="btn-right btn btn-outline-secondary m-1">Back</a>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
