@model List<Project3.Models.Feedbacks>

@{
    Layout = "~/Views/Shared/_layoutadmin.cshtml";
}
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-4"></h5>
            <div class="card">
                <div class="card-body custom-bg" style="margin: 0.75rem!important">
                    <div class="container mt-5 px-2">
                        <div class="mb-3 d-flex justify-content-between align-items-center">
                           
                        </div>
                        <div class="table-responsive">
                            <table class="table table-responsive table-borderless">
                                <thead>
                                    <tr class="bg-light">
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Subject</th>
                                        <th>Message</th>
                                        <th scope="col" width="10%">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var feedback in Model)
                                    {
                                        <tr>
                                            <td>@feedback.Name</td>
                                            <td>@feedback.Email</td>
                                            <td>@feedback.Subject</td>
                                            <td style="text-overflow: ellipsis; max-width: 200px; white-space: nowrap; overflow: hidden;">
                                                @feedback.Message
                                            </td>
                                            <td>
                                                <a asp-controller="Admin" asp-action="admin_feedback_view" asp-route-id="@feedback.FeedbackId" class="btn btn-outline-primary m-1">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard-data" viewBox="0 0 16 16">
                                                        <path d="M4 11a1 1 0 1 1 2 0v1a1 1 0 1 1-2 0zm6-4a1 1 0 1 1 2 0v5a1 1 0 1 1-2 0zM7 9a1 1 0 0 1 2 0v3a1 1 0 1 1-2 0z" />
                                                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1z" />
                                                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0z" />
                                                    </svg>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
