<!-- Include SweetAlert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // Hiển thị popup xác nhận xóa với SweetAlert
    function showConfirmPopup(form) {
        Swal.fire({
            title: 'Confirmation of deletion',
            text: 'Are you sure you want to delete this item?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // Màu nút "Yes"
            cancelButtonColor: '#6c757d', // Màu nút "No"
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit(); // Gửi form nếu người dùng xác nhận
            }
        });

        return false; // Ngăn form submit ngay lập tức
    }
</script>
